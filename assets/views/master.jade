doctype html
html(data-ng-app="Nordgourmet")
	head
		title= Nordgourmet
		meta(charset="UTF-8")
		//link(rel='stylesheet', href='http://fast.fonts.net/cssapi/67fc82a3-5a38-467c-b060-c8637a9c9dd7.css')
		link(rel='stylesheet', href='/css/nordgourmet.css')
		// Main app js
		script(src='/scripts/head.js')
		block head
	body
		block body
		div.nordgourmet
			block glovalVars


			header.logo
				img(src="/img/logo.png", alt="Nord Gourmet")

			section.container
				div.container__inner
					div.splash.splash--height700
						div.splash__item(style="background-image:url(http://placehold.it/500x300)")


			section.container
				div.container__inner
					div.cluster.cluster--line3
						div.cluster__list
							div.cluster__item
								div.cluster__inner 1
							div.cluster__item
								div.cluster__inner 2
							div.cluster__item
								div.cluster__inner 3

			section.container
				div.container__inner
					div.container__content
						div.cluster.cluster--line3
							div.cluster__list
								div.cluster__item
									div.cluster__inner 1
								div.cluster__item
									div.cluster__inner 2
								div.cluster__item
									div.cluster__inner 3

			section.container
				div.container__inner
					div.container__content Content

			footer.container
				div.footer
					div.container__inner
						div.footer__left © Copyright by NORD. All rights reserved
						div.footer__right Icons



			//block globalVars
				- var brandClasses = "brand";
				- var headerClasses = "l__header";
				- var footerClasses = "l__footer";
			//div(class="#{brandClasses}")
				header(class="#{headerClasses}")
					div.l__header__content
						block layoutHeader
						a.l__header__logo(href="/")
						div.l__header__search
							input(type="text", placeholder="Søg")
						div.l__header__social
							span Social Link
							span Login link
						nav.l__header__nav
							ul
								li
									a Startseite
								li
									a Rezepte
								li
									a Alles über Käse
								li
									a Marken & proukte
								li
									a Gewinne & coupons

				div.l__content
					div.l__content__inner
						block layoutContent


				footer(class="#{footerClasses}")
					div.l__footer__content
						block layoutFooter

		script(src='/scripts/nordgourmet.js')